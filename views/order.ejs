<div class="chart-div hide-div">
    <canvas id="myChart"></canvas>
    <br>
    <br>
    <h3 class="final-price"></h3>
    <hr>
    <div class="button-div">
  <button type="button" onClick="window.location.href=window.location.href" class="start-over btn btn-danger">Start Over</button>
<button type="button" class="btn btn-warning">Add and Continue (tba)</button>
<form class="" action="/order" method="post">
